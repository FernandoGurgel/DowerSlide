<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_moderno"
    tools:context="br.edu.ifam.dowerslide.MainActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_volta"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/btn_circle_left"
            android:layout_marginTop="88dp" />
        <ImageButton
            android:id="@+id/btn_proximo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/btn_circle_rigth"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/btn_volta"
            />
    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/btn_apresenta"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/slides"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Chronometer
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:format="00:00"
            android:textSize="65sp"
            android:typeface="monospace"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>
